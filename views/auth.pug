extends common/layout

block content
  h1 Аутентификация
  p Страница аутентификации

  if user
    form(action="/auth/logout", method="get")
      p Пользователь: #{user.name}
      button(type="submit") Выйти
  else
    ul
      li
        a(href="/auth/vk").
          Через ВКонтакте
      li
        a(href="/auth/ya") Через Яндекс
      li
        a(href="/auth/mailru") Через Mail.ru
      li
        a(href="/auth/google") Через Google

    form(action="/auth/login", method="post")
      p
        label
          span логин
          input(type="text", name="username" required)
      p
        label
          span Пароль
          input(type="password", name="password" required)
      p
        label
          input(type="checkbox", name="reg", value="reg")
          span Регистрация

      button(type="submit") Войти
